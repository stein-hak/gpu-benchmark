# Docker Image Configuration
# Copy this file to .env and configure

# Use pre-built image from Docker Hub (faster)
# Set to your Docker Hub username/organization
DOCKER_HUB_USER=your-dockerhub-username
IMAGE_NAME=${DOCKER_HUB_USER}/gpu-benchmark
IMAGE_TAG=latest

# Build mode: 'build' or 'pull'
# build = Build image locally (slower, for development)
# pull = Pull from Docker Hub (faster, for deployment)
BUILD_MODE=pull
